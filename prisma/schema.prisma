generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
enum MachineType {
  L   // Low
  M   // Medium
  H   // High

  @@map("machine_type")
}

enum MachineStatus {
  operational
  maintenance
  offline
  retired

  @@map("machine_status")
}

enum MessageRole {
  user
  assistant
  system

  @@map("message_role")
}

enum UserRole {
  admin
  operator
  viewer

  @@map("user_role")
}

model User {
  id            String         @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  email         String         @unique
  fullName      String?        @map("full_name")
  role          UserRole       @default(operator)
  isActive      Boolean        @default(true) @map("is_active")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  
  // Relations
  conversations Conversation[]

  @@index([email])
  @@map("users")
}

model Machine {
  id                  String         @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  productId           String         @unique @map("product_id")
  type                MachineType
  name                String?
  description         String?
  location            String?
  installationDate    DateTime?      @map("installation_date")
  lastMaintenanceDate DateTime?      @map("last_maintenance_date")
  status              MachineStatus  @default(operational)
  createdAt           DateTime       @default(now()) @map("created_at")
  updatedAt           DateTime       @updatedAt @map("updated_at")
  
  // Relations
  sensorReadings      SensorData[]
  conversations       Conversation[]

  @@index([productId])
  @@index([status])
  @@index([type])
  @@map("machines")
}

model SensorData {
  udi             Int      @id @default(autoincrement())
  machineId       String   @db.Uuid @map("machine_id")
  productId       String?  @map("product_id")
  timestamp       DateTime @default(now())
  airTemp         Float    @map("air_temp")
  processTemp     Float    @map("process_temp")
  rotationalSpeed Int      @map("rotational_speed")
  torque          Float
  toolWear        Int      @map("tool_wear")
  createdAt       DateTime @default(now()) @map("created_at")
  
  // Relations
  machine         Machine  @relation(fields: [machineId], references: [id], onDelete: Cascade)

  @@index([machineId, timestamp])
  @@index([timestamp])
  @@map("sensor_readings")
}

model Conversation {
  id             String    @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  userId         String    @db.Uuid @map("user_id")
  title          String
  machineId      String?   @db.Uuid @map("machine_id")
  totalMessages  Int       @default(0) @map("total_messages")
  lastMessageAt  DateTime? @map("last_message_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  
  // Relations
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  machine        Machine?  @relation(fields: [machineId], references: [id], onDelete: SetNull)
  messages       Message[]

  @@index([userId])
  @@index([machineId])
  @@index([lastMessageAt])
  @@map("chat_conversations")
}

model Message {
  id             String       @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  conversationId String       @db.Uuid @map("conversation_id")
  role           MessageRole
  content        String       @db.Text
  createdAt      DateTime     @default(now()) @map("created_at")
  
  // Relations
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@map("chat_messages")
}

